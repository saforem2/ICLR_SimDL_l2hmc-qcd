journal = {Journal of High Energy Physics},
keywords = {Nonperturbative Effects,Renormalization Regularization and Renormalons,Sigma Models,Solitons Monopoles and Instantons},
number = {10},
title = {{Decoding perturbation theory using resurgence: Stokes phenomena, new saddle points and Lefschetz thimbles}},
